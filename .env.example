# Optional Sentry monitoring
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# SSE server configuration (optional)
MCP_SSE_PORT=5583
MCP_SSE_HOST=0.0.0.0

# Authentication configuration (optional)
# Enable session token authentication for production deployments
AUTH_ENABLED=false

# Admin token for bootstrapping (REQUIRED if AUTH_ENABLED=true)
# This token is used to create new session tokens via POST /auth/token
# Example: AUTH_ADMIN_TOKEN=$(uuidgen) or use any secure random string
AUTH_ADMIN_TOKEN=

# Token time-to-live in hours (default: 24)
AUTH_TOKEN_TTL=24

# Token storage backend: "memory" (default) or "supabase"
# - memory: Fast but not persistent (tokens lost on restart)
# - supabase: Persistent storage (requires SUPABASE_URL and SUPABASE_KEY)
AUTH_STORAGE=memory

# Supabase configuration (REQUIRED if AUTH_STORAGE=supabase)
SUPABASE_URL=
SUPABASE_KEY=
